<%- include('header') %>
<form class="form-horizontal"method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-lg-2" for="exampleInputEmail1">Username</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="username" name="name">
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" class="col-lg-2">Password</label>
        <div class="col-lg-10">
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword2" class="col-lg-2">Password Again</label>
        <div class="col-lg-10">
            <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password" name="repassword">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-lg-2">Gender</label>
        <div class="col-lg-2">
            <select id="genderSelect" class="form-control" name="gender">
                <option value="m">Male</option>
                <option value="f">Female</option>
                <option value="x">Secret</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputFile" class="col-lg-2">Avatar</label>
        <div class="col-lg-10">
            <input type="file" id="exampleInputFile" name="avatar">
            <p class="help-block">Example block-level help text here.</p>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-lg-2">Description</label>
        <div class="col-lg-10">
            <textarea name="bio" rows="3" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <input type="submit" class="btn btn-default" value="submit">
        </div>
    </div>
</form>
<%- include('footer') %>