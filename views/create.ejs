<%- include('header') %>
<form class="form-horizontal" method="post" action="/posts">
    <div class="form-group">
        <label class="col-lg-2" for="">Title</label>
        <div class="col-lg-12">
            <input type="text" name="title" class="form-control" placeholder="post title">
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-lg-2">Content</label>
        <div class="col-lg-12">
                <textarea rows="12" name="content" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
<%- include('footer') %>